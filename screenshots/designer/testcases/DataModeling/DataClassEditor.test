proc setTableColumnWidth [val name] [val size]
{
	get-column-header $name | get-object | invoke setWidth $size
}

proc openDataClass [val path]
{
	get-view "Axon Ivy Projects" | get-tree | get-item $path | double-click
}

// DataClass editor general
importProject -projectName "QuickStartTutorial"
togglePresentation -flat true

openDataClass -path "QuickStartTutorial/Data Classes/quickStartTutorial/Data"
get-eclipse-window | resizeWindow 700 500
with [get-editor Data]
{
  maximize
  with [get-table]
  {
    setTableColumnWidth Name 100
	setTableColumnWidth Type 100
	setTableColumnWidth Persistent 100
	setTableColumnWidth Comment 200
  }
}
find-tab-folder Data | get-object | captureScreenshot "data-class/data-class-editor.png"
get-editor Data | close


