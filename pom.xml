<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.ivyteam.ivy</groupId>
	<artifactId>doc-product</artifactId>
	<version>7.3.2-SNAPSHOT</version>
	<packaging>pom</packaging>

	<repositories>
		<repository>
			<id>zugpronexus.build</id>
			<name>Internal Build Repository</name>
			<url>http://zugpronexus:8081/nexus/content/groups/build</url>
			<snapshots>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
	</repositories>

    <distributionManagement>
		<repository>
			<id>zugpronexus.snapshots</id>
			<name>Internal Build Integration Repository</name>
			<url>http://zugpronexus:8081/nexus/content/repositories/build-snapshots/</url>
		</repository>
	</distributionManagement>
	
    <build>
		<plugins>
		    <plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-dependency-plugin</artifactId>
		        <version>2.10</version>
		        <executions>
		            <execution>
		                <id>unpack-doc-images</id>
		                <goals><goal>unpack</goal></goals>
		                <phase>generate-resources</phase>
		                <configuration>
		                    <outputDirectory>source</outputDirectory>
		                    <artifactItems>
		                        <artifactItem>
		                            <groupId>ch.ivyteam.ivy</groupId>
		                            <artifactId>doc-images</artifactId>
		                            <version>7.3.2-SNAPSHOT</version>
		                            <type>zip</type>
		                        </artifactItem>
		                    </artifactItems>
		                </configuration>
		            </execution>
		        </executions>
		    </plugin>
    
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>3.1.1</version>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>zip.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>			
		</plugins>
	</build>

</project> 
