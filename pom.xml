<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.ivyteam.ivy</groupId>
	<artifactId>doc-product</artifactId>
	<version>7.3.2-SNAPSHOT</version>
	<packaging>pom</packaging>

	<repositories>
		<repository>
			<id>zugpronexus.build</id>
			<name>Internal Build Repository</name>
			<url>http://zugpronexus:8081/nexus/content/groups/build</url>
			<snapshots>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
	</repositories>

    <distributionManagement>
		<repository>
			<id>zugpronexus.snapshots</id>
			<name>Internal Build Integration Repository</name>
			<url>http://zugpronexus:8081/nexus/content/repositories/build-snapshots/</url>
		</repository>
	</distributionManagement>
	
    <build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.8</version>
				<executions>
				<execution>
					<id>parse-version</id>
					<goals>
						<goal>parse-version</goal>
					</goals>
				</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.1.0</version>
				<executions>
				<execution>
					<id>copy-resources</id>
					<phase>validate</phase>
					<goals>
						<goal>copy-resources</goal>
					</goals>
					<configuration>
						<outputDirectory>${basedir}/target</outputDirectory>
						<resources>          
							<resource>							     
								<directory>.</directory>
								<filtering>true</filtering>
								<includes>
									<include>version.py</include>
								</includes>
							</resource>
						</resources>              
					</configuration>            
				</execution>
				</executions>
			</plugin>
			
		    <plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-dependency-plugin</artifactId>
		        <version>2.10</version>
		        <executions>
		            <execution>
		                <id>unpack-doc-images</id>
		                <goals><goal>unpack</goal></goals>
		                <phase>generate-resources</phase>
		                <configuration>
		                    <outputDirectory>source</outputDirectory>
		                    <artifactItems>
		                        <artifactItem>
		                            <groupId>ch.ivyteam.ivy</groupId>
		                            <artifactId>doc-images</artifactId>
		                            <version>7.3.2-SNAPSHOT</version>
		                            <type>zip</type>
		                        </artifactItem>
		                    </artifactItems>
		                </configuration>
		            </execution>
					<execution>
						<id>unpack-engine-cockpit-images</id>
						<goals><goal>unpack</goal></goals>
						<phase>generate-resources</phase>
						<configuration>
							<outputDirectory>source/engine-guide/tool-reference/images</outputDirectory>
							<artifactItems>
		                        <artifactItem>
		                            <groupId>ch.ivyteam.ivy</groupId>
		                            <artifactId>engine-cockpit-selenium-test</artifactId>
		                            <version>7.3.1-SNAPSHOT</version>
		                            <type>zip</type>
		                        </artifactItem>
		                    </artifactItems>
						</configuration>
					</execution>
		        </executions>
		    </plugin>
    
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>3.1.1</version>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>zip.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>			
		</plugins>
	</build>

</project> 
