<plugin>
  <groupId>com.axonivy.ivy.ci</groupId>
  <artifactId>project-build-plugin</artifactId>
  <extensions>true</extensions>
  <executions>
    <execution>
      <id>deploy.to.engine.http</id>
      <goals><goal>deploy-to-engine</goal></goals>
      <phase>deploy</phase>
      <configuration>
        <deployToEngineApplication>portal</deployToEngineApplication>
        <deployMethod>HTTP</deployMethod>
        <deployHttpId>serverId</deployHttpId>
        <deployHttpEngine>http://localhost:8080/ivy</deployHttpEngine>
      </configuration>
    </execution>
  </executions>
</plugin>
