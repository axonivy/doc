proc processOutline{
	with [get-view "Axon Ivy Projects" | get-tree]{
		get-item "QuickStartTutorial/Processes/MyProcess" | double-click
	}
	get-eclipse-window | maximize
	wait 500
	
	OpenView Outline
	with [find-tab-folder Outline]{
		resizeWindow 500 200
		get-object | captureScreenshot "process-modeling/outline-view.png"
	}
}

proc problemsView{
	with [get-view "Axon Ivy Projects" | get-tree]
	{
		get-item "QuickStartTutorial/Html Dialogs/quickStartTutorial.EnterProduct" | click
		select "QuickStartTutorial/Html Dialogs/quickStartTutorial.EnterProduct" | get-menu Delete | click
	}
	get-window Refactoring | get-button Finish | click
	
	get-view "Axon Ivy Projects" | get-tree | select QuickStartTutorial | get-menu Validate | click
	get-window "Validation Results" | close
	
	OpenView Problems
	get-view Problems | get-tree | select "Errors (.*)/User Dialog 'quickStartTutorial.EnterProduct' not found."
	with [find-tab-folder Problems] {
		resizeWindow 800 300
		get-object | captureScreenshot "process-modeling/problem-view.png"
	}
	
	get-view "Axon Ivy Projects" | get-tree | get-item "QuickStartTutorial/Processes/MyProcess" | double-click
	get-eclipse-window | resizeWindow 1090 860
	wait 1000
	find-tab-folder "MyProcess.p.json" | get-object | captureScreenshot "process-modeling/process-element-with-problem-marker.png"
	get-eclipse-window | maximize
}


proc referenceView{
	OpenView "Reference View"
	with [get-view "Axon Ivy Projects" | get-tree] {
		select documentationExampleProject | get-menu "Show References" | click
	}
	
	with [find-tab-folder "Reference View"] {
		resizeWindow 500 200
		find-tab-folder "Reference View" | get-object | captureScreenshot "process-modeling/reference-view.png"
	}
	
	with [get-view "Reference View"] {
		get-button "Refresh .*" | get-object | captureScreenshot "process-modeling/reference-view-refresh.png"
		get-button "Show References" | get-object | captureScreenshot "process-modeling/reference-view-references.png"
		get-button "Show Inverse References" | get-object | captureScreenshot "process-modeling/reference-view-inverse-references.png"
		get-button "Cancel Current Calculation" | get-object | captureScreenshot "process-modeling/reference-view-stop.png"
	}
}


try{
	importProject -projectName QuickStartTutorial
	togglePresentation -flat true
	processOutline
	problemsView
	
	importProject -projectName documentationExampleProject
	referenceView
} -finally {
	deleteProject QuickStartTutorial
}

