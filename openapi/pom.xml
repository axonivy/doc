<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>ch.ivyteam.ivy</groupId>
    <artifactId>maven-config</artifactId>
    <version>11.1.0-SNAPSHOT</version>
    <relativePath>../../maven/config</relativePath>
  </parent>

  <groupId>ch.ivyteam.doc</groupId>
  <artifactId>doc-openapi</artifactId>
  <packaging>pom</packaging>

  <properties>
    <ivy.engine.directory>${project.build.directory}/ivyEngine</ivy.engine.directory>
    <openapi.output>${project.build.directory}/openapi/</openapi.output>
  </properties>

  <build>    
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-engine</id>
            <phase>initialize</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <unzip dest="${ivy.engine.directory}">
                  <fileset dir="${project.basedir}/../../workspace/ch.ivyteam.ivy.server.product/target/products/">
                    <include name="AxonIvyEngine*_All_x64.zip" />
                    <exclude name="AxonIvyEngine*_Slim_All_x64.zip" />
                  </fileset>
                </unzip>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>com.axonivy.ivy.ci</groupId>
        <artifactId>project-build-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <ivyVersion>${ivy-version}</ivyVersion>
          <osArchitecture>All_x64</osArchitecture>          
        </configuration>
        <executions>
          <execution>
            <id>unpack-engine</id>
            <phase>initialize</phase>
            <goals>
              <goal>installEngine</goal>
            </goals>
          </execution>
          <execution>
            <id>start-engine</id>
            <phase>initialize</phase>
            <goals>
              <goal>start-test-engine</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>openapi-specs</id>
            <phase>verify</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <mkdir dir="${openapi.output}"></mkdir>
                <get dest="${openapi.output}system.json" src="${test.engine.url}system/api/openapi.json"></get>
                <get dest="${openapi.output}default.json" src="${test.engine.url}/api/openapi.json"></get>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>config-json</id>
            <phase>verify</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${openapi.output}</outputDirectory>
              <resources>
                <resrouce>
                  <directory>.</directory>
                  <includes>
                    <include>config.json</include>
                  </includes>
                  <filtering>true</filtering>
                </resrouce>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
