<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>ch.ivyteam.ivy</groupId>
    <artifactId>maven-config-dependencies</artifactId>
    <version>8.0.3-SNAPSHOT</version>
    <relativePath>../maven/config/dependencies</relativePath>
  </parent>

  <groupId>ch.ivyteam.doc</groupId>
  <artifactId>doc-product</artifactId>
  <packaging>pom</packaging>
  <name>Axon.ivy Digital Business Platform</name>

  <properties>
    <images.folder>source/_images</images.folder>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>flatten-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-doc-images</id>
            <goals>
              <goal>unpack</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <outputDirectory>${images.folder}</outputDirectory>
              <artifactItems>
                <artifactItem>
                  <groupId>ch.ivyteam.doc</groupId>
                  <artifactId>doc-images</artifactId>
                  <type>zip</type>
                </artifactItem>

                <artifactItem>
                  <groupId>ch.ivyteam.doc</groupId>
                  <artifactId>doc-screenshots</artifactId>
                  <type>zip</type>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>

          <execution>
            <id>unpack-engine-cockpit-images</id>
            <goals>
              <goal>unpack</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <outputDirectory>${images.folder}/engine-cockpit</outputDirectory>
              <artifactItems>
                <artifactItem>
                  <groupId>ch.ivyteam.enginecockpit</groupId>
                  <artifactId>engine-cockpit-selenium-test</artifactId>
                  <type>zip</type>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>

          <execution>
            <id>integrate-public-api</id>
            <phase>package</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>ch.ivyteam.doc</groupId>
                  <artifactId>public-api</artifactId>
                  <version>${ivy.publicapi.version}</version>
                  <classifier>javadoc</classifier>
                </artifactItem>
              </artifactItems>
              <excludes>META-INF/**</excludes>
              <outputDirectory>build/html/public-api</outputDirectory>
            </configuration>
          </execution>
        </executions>

        <configuration>
          <overWriteSnapshots>true</overWriteSnapshots>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>install</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <descriptors>
                <descriptor>zip.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>${images.folder}</directory>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
